<f:LayoutGroup xmlns:f="library://ns.feathersui.com/mxml"
               xmlns:fx="http://ns.adobe.com/mxml/2009">

    <f:layout>
        <f:HorizontalLayout verticalAlign="middle" gap="5"/>
    </f:layout>

    <f:Button id="upButton"
              styleName="{StyleNames.TRACK_NAVIGATION_CONTROL_UP_BUTTON}"
              triggered="upButtonTriggered()"/>

    <f:Label id="nameLabel"
             styleName="{StyleNames.TRACK_NAVIGATION_CONTROL_NAME_LABEL}"
             minWidth="200">
        <f:layoutData>
            <f:HorizontalLayoutData percentWidth="100"/>
        </f:layoutData>
    </f:Label>

    <f:Button id="downButton"
              styleName="{StyleNames.TRACK_NAVIGATION_CONTROL_DOWN_BUTTON}"
              triggered="downButtonTriggered()"/>

    <fx:Script><![CDATA[
        import touch4bitwig.theme.StyleNames;

        public var owner:TrackNavigationControl;

        public function set canScrollTracksUp(value:Boolean):void
        {
            upButton.isEnabled = owner.canScrollTracksUp;
            downButton.isEnabled = owner.canScrollTracksDown;
        }

        public function set canScrollTracksDown(value:Boolean):void
        {
            upButton.isEnabled = owner.canScrollTracksUp;
            downButton.isEnabled = owner.canScrollTracksDown;
        }

        public function set trackName(value:String):void
        {
            nameLabel.text = value;
            invalidate(INVALIDATION_FLAG_SIZE);
        }

        private function upButtonTriggered():void
        {
            dispatchEventWith(TrackNavigationControl.EVENT_UP);
        }

        private function downButtonTriggered():void
        {
            dispatchEventWith(TrackNavigationControl.EVENT_DOWN);
        }
        ]]></fx:Script>

</f:LayoutGroup>